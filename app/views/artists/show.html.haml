- model_class = Artist
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @artist.name
%p
  %strong= model_class.human_attribute_name(:api_id) + ':'
  %br
  = @artist.api_id
%p
  %strong= model_class.human_attribute_name(:track) + ':'
  %br
  = @artist.track
%p
  %strong= model_class.human_attribute_name(:mbid) + ':'
  %br
  = @artist.mbid
%p
  %strong= model_class.human_attribute_name(:photo_file_name) + ':'
  %br
  = @artist.photo_file_name
%p
  %strong= model_class.human_attribute_name(:photo_content_type) + ':'
  %br
  = @artist.photo_content_type
%p
  %strong= model_class.human_attribute_name(:photo_file_size) + ':'
  %br
  = @artist.photo_file_size
%p
  %strong= model_class.human_attribute_name(:photo_updated_at) + ':'
  %br
  = @artist.photo_updated_at

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), artists_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_artist_path(@artist), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), artist_path(@artist), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
