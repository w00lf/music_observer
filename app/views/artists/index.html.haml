- model_class = Artist
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:api_id)
      %th= model_class.human_attribute_name(:track)
      %th= model_class.human_attribute_name(:mbid)
      %th= model_class.human_attribute_name(:photo_file_size)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @artists.each do |artist|
      %tr
        %td= link_to artist.id, artist_path(artist)
        %td= artist.name
        %td= artist.api_id
        %td= artist.track
        %td= artist.mbid
        %td= artist.photo_file_name
        %td=l artist.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_artist_path(artist), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), artist_path(artist), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_artist_path, :class => 'btn btn-primary'
