- model_class = Artist
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize


= link_to t('.create', :default => t("helpers.links.new")), new_artist_path, :class => 'btn btn-primary'
= link_to t(:add_from_library), '#', :class => 'btn btn-primary', id: 'add_library_button'

= form_tag api_library_artists_path, method: :post, id: 'api_library', :remote => true do
  = label_tag 'api_id', 'Lastfm user login:'
  = text_field_tag 'api_id', nil
  = submit_tag t(:add), :confirm => t(:parsing_message)

%div#response
%table.table.table-striped#artist_table
  %thead
    %tr
      %th= model_class.human_attribute_name(:status)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:track)
      %th= model_class.human_attribute_name(:mbid)
      %th= model_class.human_attribute_name(:photo)
      %th= model_class.human_attribute_name(:created_at)
      %th= t'.actions', :default => t("helpers.actions")
      %th
        track
  %tbody
    - @artists.each do |artist|
      = form_tag '', :remote => true do
        %tr
          - html_class = artist.artist_user_entries.find_by_user_id(current_user.id).track ? "label-success" : "label-default"
          %td 
            %span{class: "label #{html_class}"}
              = artist.artist_user_entries.find_by_user_id(current_user.id).track ? 'Tracked' : 'Dont tracked'
          %td= artist.name
          %td= get_track_button(artist.artist_user_entries.find_by_user_id(current_user.id).track, artist.id)
          %td= artist.mbid
          %td= image_tag artist.photo.url
          %td=l artist.created_at
          %td
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_artist_path(artist), :class => 'btn btn-mini'
            = link_to t('.destroy', :default => t("helpers.links.destroy")), artist_path(artist), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
          %td
            = check_box_tag 'artist[id]'
    = will_paginate @artists
