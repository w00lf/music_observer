- model_class = Concert
.page-header
  %h1= model_page_title(model_class)
%table.table.table-striped
  %thead
    %tr
      %th
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:country)
      %th= model_class.human_attribute_name(:sity)
      %th= model_class.human_attribute_name(:street)
      %th= model_class.human_attribute_name(:artist)
      %th= model_class.human_attribute_name(:start_date)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @concerts.each do |concert|
      %tr
        %td= image_tag concert.photo.url
        %td= link_to concert.title, concert.api_link, class: 'external '
        %td= truncate( strip_tags( concert.description ), length: 200, separator: " " )
        %td= concert.country
        %td= concert.sity
        %td= concert.street
        %td= link_to concert.artist.name, favorite_path(concert.artist)
        %td= concert.start_date
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_concert_path(concert), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), concert_path(concert), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
    = will_paginate @concerts

