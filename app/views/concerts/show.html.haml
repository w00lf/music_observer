- model_class = Concert
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @concert.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @concert.description
%p
  %strong= model_class.human_attribute_name(:api_link) + ':'
  %br
  = @concert.api_link
%p
  %strong= model_class.human_attribute_name(:country) + ':'
  %br
  = @concert.country
%p
  %strong= model_class.human_attribute_name(:sity) + ':'
  %br
  = @concert.sity
%p
  %strong= model_class.human_attribute_name(:street) + ':'
  %br
  = @concert.street
%p
  %strong= model_class.human_attribute_name(:artist_id) + ':'
  %br
  = @concert.artist_id
%p
  %strong= model_class.human_attribute_name(:start_date) + ':'
  %br
  = @concert.start_date
%p
  %strong= model_class.human_attribute_name(:api_id) + ':'
  %br
  = @concert.api_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), concerts_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_concert_path(@concert), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), concert_path(@concert), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
