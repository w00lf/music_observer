- model_class = Favorite
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @favorite.name
%p
  %strong= model_class.human_attribute_name(:track) + ':'
  %br
  = @favorite.track
%p
  %strong= model_class.human_attribute_name(:mbid) + ':'
  %br
  = @favorite.mbid
%p
  %strong= model_class.human_attribute_name(:photo_file_name) + ':'
  %br
  = @favorite.photo.url

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), favorites_path, :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), favorite_path(@favorite), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
